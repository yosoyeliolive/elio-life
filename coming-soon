    <script>
        // Smooth scrolling
        function scrollToSection(sectionId) {
            document.getElementById(sectionId).scrollIntoView({
                behavior: 'smooth'
            });
        }

        // Parallax effects simplificado
        let ticking = false;
        
        function updateParallax() {
            const scrolled = window.pageYOffset;
            const parallax = document.querySelector('.sierra-background');
            
            if (parallax) {
                const rate = scrolled * -0.3;
                parallax.style.transform = `translate3d(0, ${rate}px, 0)`;
            }
            
            ticking = false;
        }
        
        function requestTick() {
            if (!ticking) {
                requestAnimationFrame(updateParallax);
                ticking = true;
            }
        }
        
        window.addEventListener('scroll', requestTick);

        // Función para mostrar el modal de Elio
        function showElioModal() {
            const modal = document.getElementById('elioModal');
            modal.classList.add('show');
            
            // Iniciar secuencia de pasos
            startCallSequence();
        }
        
        // Función para cerrar el modal
        function closeElioModal() {
            const modal = document.getElementById('elioModal');
            modal.classList.remove('show');
        }
        
        // Secuencia de llamada con pasos y contador
        function startCallSequence() {
            const steps = [
                {
                    id: 'step1',
                    status: 'Validando tus datos...',
                    message: 'Elio está verificando tu información de contacto.',
                    duration: 2000
                },
                {
                    id: 'step2', 
                    status: 'Conectando con Elio...',
                    message: 'Estableciendo conexión con tu copiloto digital.',
                    duration: 2000
                },
                {
                    id: 'step3',
                    status: 'Preparando llamada...',
                    message: 'Elio está personalizando la conversación según tu perfil.',
                    duration: 2000
                }
            ];
            
            let currentStep = 0;
            
            function nextStep() {
                if (currentStep > 0) {
                    // Marcar paso anterior como completado
                    const prevStep = document.getElementById(steps[currentStep - 1].id);
                    prevStep.classList.remove('active');
                    prevStep.classList.add('completed');
                    prevStep.querySelector('.step-icon').innerHTML = '✓';
                }
                
                if (currentStep < steps.length) {
                    const step = steps[currentStep];
                    
                    // Activar paso actual
                    const stepElement = document.getElementById(step.id);
                    stepElement.classList.add('active');
                    
                    // Actualizar textos
                    document.getElementById('statusText').textContent = step.status;
                    document.getElementById('modalMessage').textContent = step.message;
                    
                    currentStep++;
                    
                    if (currentStep <= steps.length) {
                        setTimeout(nextStep, step.duration);
                    }
                } else {
                    // Finalizar secuencia
                    finishSequence();
                }
            }
            
            // Iniciar contador regresivo
            startCountdown(8); // 8 segundos total
            
            // Comenzar secuencia
            nextStep();
        }
        
        function startCountdown(seconds) {
            const countdownElement = document.getElementById('countdown');
            let timeLeft = seconds;
            
            const interval = setInterval(() => {
                countdownElement.textContent = timeLeft + 's';
                timeLeft--;
                
                if (timeLeft < 0) {
                    clearInterval(interval);
                    countdownElement.textContent = '¡Ya!';
                }
            }, 1000);
        }
        
        function finishSequence() {
            // Marcar último paso como completado
            const lastStep = document.getElementById('step3');
            lastStep.classList.remove('active');
            lastStep.classList.add('completed');
            lastStep.querySelector('.step-icon').innerHTML = '✓';
            
            // Actualizar estado final
            document.getElementById('statusText').textContent = '¡Elio te está llamando!';
            document.getElementById('modalMessage').textContent = 'Responde tu teléfono. Elio está marcando ahora.';
        }

        // Form submission para Elio - DESHABILITADO para Coming Soon
        // document.getElementById('elioForm').addEventListener('submit', function(e) {
        //     e.preventDefault();
        //     // Código del formulario comentado para la fase de expectación
        // });

        // Lista de espera para Coming Soon
        function joinWaitlist() {
            const email = document.getElementById('waitlistEmail').value;
            
            if (!email) {
                alert('Por favor, introduce tu email para unirte a la lista de espera.');
                return;
            }
            
            if (!isValidEmail(email)) {
                alert('Por favor, introduce un email válido.');
                return;
            }
            
            // Aquí integrarías con tu sistema de lista de espera
            console.log('Email agregado a lista de espera:', email);
            
            // Feedback visual
            const button = document.querySelector('.waitlist-button');
            const originalText = button.innerHTML;
            
            button.innerHTML = '✓ ¡Agregado!';
            button.style.background = '#10b981';
            button.style.color = 'white';
            
            setTimeout(() => {
                button.innerHTML = originalText;
                button.style.background = 'white';
                button.style.color = 'black';
                document.getElementById('waitlistEmail').value = '';
            }, 3000);
        }
        
        function isValidEmail(email) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }
        
        // Contador regresivo
        function initCountdown() {
            // Fecha objetivo: 42 días desde ahora (puedes cambiarla)
            const targetDate = new Date();
            targetDate.setDate(targetDate.getDate() + 42);
            targetDate.setHours(14, 30, 0, 0); // 14:30:00
            
            function updateCountdown() {
                const now = new Date().getTime();
                const timeLeft = targetDate.getTime() - now;
                
                if (timeLeft > 0) {
                    const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
                    const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                    const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
                    
                    document.getElementById('days').textContent = String(days).padStart(2, '0');
                    document.getElementById('hours').textContent = String(hours).padStart(2, '0');
                    document.getElementById('minutes').textContent = String(minutes).padStart(2, '0');
                } else {
                    // Contador llegó a cero
                    document.getElementById('days').textContent = '00';
                    document.getElementById('hours').textContent = '00';
                    document.getElementById('minutes').textContent = '00';
                }
            }
            
            // Actualizar inmediatamente y luego cada minuto
            updateCountdown();
            setInterval(updateCountdown, 60000);
        }
        
        // Inicializar contador al cargar la página
        document.addEventListener('DOMContentLoaded', function() {
            initCountdown();
        });
        
        // Permitir envío del formulario de waitlist con Enter
        document.getElementById('waitlistEmail').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                joinWaitlist();
            }
        });

        // Efectos de hover mejorados para las ondas del hero
        document.querySelectorAll('.hero-wave').forEach(wave => {
            wave.addEventListener('mouseenter', function() {
                this.style.filter = 'drop-shadow(0 0 20px rgba(255,255,255,0.8))';
                this.style.transform = 'scaleY(1.5)';
            });
            
            wave.addEventListener('mouseleave', function() {
                this.style.filter = '';
                this.style.transform = '';
            });
        });
    </script>
</body>
</html>

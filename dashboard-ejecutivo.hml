            const minutes = parseInt(document.getElementById('minutes').value) || 0;
            const months = parseInt(document.getElementById('months').value) || 1;
            
            // Precio por minuto seg√∫n volumen
            let pricePerMinute = 0.15;
            if (minutes > 15000) pricePerMinute = 0.09;
            else if (minutes > 5000) pricePerMinute = 0.11;
            else if (minutes > 1000) pricePerMinute = 0.13;
            
            // C√°lculos
            const setup = 150;
            const maintenance = 49 * months;
            const usage = minutes * pricePerMinute * months;
            const total = setup + maintenance + usage;
            
            // Mostrar resultado
            document.getElementById('total-cost').innerHTML = `
                <div style="font-size: 1.2rem; font-weight: 800;">${total.toFixed(0)}‚Ç¨*</div>
                <div style="font-size: 0.7rem; margin-top: 0.3rem; opacity: 0.8;">

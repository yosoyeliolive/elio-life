                            <div class="pricing-card">
                                <div class="card-title">5.001-15.000 min/mes</div>
                                <div class="card-price">0,11€*</div>
                                <div class="card-description">-27% descuento</div>
                            </div>
                            
                            <div class="pricing-card">
                                <div class="card-title">+15.000 min/mes</div>
                                <div class="card-price">0,09€*</div>
                                <div class="card-description">-40% descuento</div>
